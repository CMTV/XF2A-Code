{
    "template": "editor_dialog_code",
    "description": "Setting the default code language",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<xf:option value=\"{$key}\">{$language.phrase}</xf:option>",
    "replace": "<xf:if is=\"$language.Code_default_language\">\n\t<xf:option value=\"{$key}\" selected=\"true\">{$language.phrase}</xf:option>\n<xf:else />\n\t$0\n</xf:if>"
}